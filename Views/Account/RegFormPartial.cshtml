@model User;
<div class="card d-inline-block">
    <div class="card-header text-center">
        Registration
    </div>
    <div class="card-body">
        <form asp-action="Register" asp-controller="Account" method="post">
            <label asp-for="FirstName">First Name:</label>
            <input asp-for="FirstName" class="float-right">
            <br/>
            <span asp-validation-for="FirstName" style="color: red;"></span>
            <br/>
            <label asp-for="LastName">Last Name:</label>
            <input asp-for="LastName" class="float-right">
            <br/>
            <span asp-validation-for="LastName" style="color: red;"></span>
            <br/>
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="float-right">
            <br/>
            <span asp-validation-for="Email" style="color: red;"></span>
            <br/>
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" class="float-right">
            <br/>
            <span asp-validation-for="Password" style="color: red;"></span>
            <br/>
            <label asp-for="ConfirmPW">Confirm Password:</label>
            <input asp-for="ConfirmPW" class="float-right">
            <br/>
            <span asp-validation-for="ConfirmPW" style="color: red;"></span>
            <br/>
            <input value="Sign Up!" type="submit" class="btn btn-primary">    
        </form>
    </div>
</div>